<!doctype html>
<html metal:use-macro="api.masterTemplate.macros['master']">
<head></head>
<body>


  <metal:navbar fill-slot="authentication-data">
      <div metal:use-macro="api.masterTemplate.macros['authentication-data']"></div>
  </metal:navbar>

  <metal:navbar fill-slot="navbar">
      <div metal:use-macro="api.masterTemplate.macros['navbar']"></div>
  </metal:navbar>

  <metal:sidebar fill-slot="sidebar">
      <div metal:use-macro="api.masterTemplate.macros['sidebar']"></div>
  </metal:sidebar>

  <metal:main fill-slot="main">

        <div class="alert alert-danger fade in" tal:condition="api.error">
            <strong>Error!</strong> ${api.error}
            <span class="close" data-dismiss="alert">×</span>
        </div>

        <div class="alert alert-danger fade in" ng-if="mainCtrl.error">
            <strong>Error!</strong> <span ng-bind-html="mainCtrl.error"></span>
            <span class="close" data-dismiss="alert">×</span>
        </div>
        <div ui-view></div>

  </metal:main>


<metal:main fill-slot="view_scripts">

    <script src="${api.application_url}/angular-elastic-input/angular-elastic-input.min.js"></script>

    <script src="${api.application_url}/angular/hubClient.js"></script>
    <script src="${api.application_url}/angular/MAXClient.js"></script>
    <script src="${api.application_url}/angular/sidebar.js"></script>
    <script src="${api.application_url}/maxui/maxui.js"></script>
    <script src="${api.application_url}/angular/DomainManagement/app.js"></script>
    <script src="${api.application_url}/angular/DomainManagement/api.js"></script>
    <script src="${api.application_url}/angular/DomainManagement/users.js"></script>
    <script src="${api.application_url}/angular/DomainManagement/contexts.js"></script>
    <script src="${api.application_url}/angular/DomainManagement/exceptions.js"></script>

</metal:main>


</body>
</html>

