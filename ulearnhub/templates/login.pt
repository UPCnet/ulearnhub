<!doctype html>
<html metal:use-macro="api.masterTemplate.macros['master']">
<head></head>
<body>
  <metal:main fill-slot="body">

  <div id="page-container">
      <!-- begin login -->
        <div class="login bg-black animated fadeInDown">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <span class="logo"></span> Ulearn HUB
                    <small>Deployment & Domain Management</small>
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in"></i>
                </div>
            </div>
            <!-- end brand -->
            <div class="login-content">
                <form action="${api.application_url}/login" method="POST" class="margin-bottom-0">
                    <div class="form-group m-b-5">
                        <input name="domain" type="text" class="form-control input-md" placeholder="Domain" />
                    </div>
                    <div class="form-group m-b-5">
                        <input name="username" type="text" class="form-control input-md" placeholder="Username" />
                    </div>
                    <div class="form-group m-b-5">
                        <input name="password" type="password" class="form-control input-md" placeholder="Password" />
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            <input type="checkbox" /> Remember Me
                        </label>
                    </div>
                    <input name="form.submitted" type="hidden" value="1">
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-success btn-block btn-lg">Log in</button>
                    </div>
                </form>

      <div class="row login-error" tal:condition="error">
          <div class="col-lg-6 alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Login Error</strong> ${error}
          </div>
      </div>

            </div>
        </div>
        <!-- end login -->


  </div>
  <!-- end page container -->

  </metal:main>
</body>
</html>





