<!doctype html>
<html metal:use-macro="api.masterTemplate.macros['master']">
<head></head>
<body>

  <metal:main fill-slot="main">
      <div ng-app="uLearnHUB" ng-cloak>

          <ng-hub-info username="${api.authenticated_user}"
                       server="${api.application_url}"
                       token="${api.authenticated_user_token}">
          </ng-hub-info>

          <h1 class="page-header">Registered Domains</h1>
          <div ng-controller="DomainsController as ctrl">
              <table datatable="ng" dt-options="ctrl.dtOptions"
                     dt-column-defs="ctrl.dtColumnDefs"
                     class="compact table table-striped">
                  <thead>
                    <tr>
                      <th>domain</th>
                      <th>server</th>
                      <th>oauth</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr ng-repeat="domain in ctrl.domains">
                      <td><a href="${api.application_url}/{{domain.name}}">{{ domain.name }}</a></td>
                      <td>{{ domain.server }}</td>
                      <td>{{ domain.oauth_server }}</td>

                    </tr>
                  </tbody>
              </table>

              <hr>
              <div class="view-actions pull-right">
                <button class="btn btn-primary" ng-click="ctrl.open()">New domain</button>
              </div>


              <script type="text/ng-template" id="new-domain.html">

                  <div class="modal-header">
                      <h3 class="modal-title">Add new domain</h3>
                  </div>
                  <div class="modal-body">

                  <form>
                    <div class="form-group">
                      <label for="domainName">Domain name</label>
                      <input ng-model="newdomain.name" type="text" class="form-control" id="domainName" placeholder="Name used in utalk app authentication">
                    </div>

                    <div class="form-group">
                      <label for="maxServerUrl">Max server</label>
                      <input ng-model="newdomain.server" type="text" class="form-control" id="maxServerUrl" placeholder="Full url of the max server used by this domain">
                    </div>

                    <div class="form-group">
                      <label for="domainName">Username</label>
                      <input ng-model="newdomain.user" type="text" class="form-control" id="user" placeholder="Manager user to be used in background operations">
                    </div>

                    <div class="form-group">
                      <label for="maxServerUrl">Password</label>
                      <input ng-model="newdomain.password" type="password" class="form-control" id="password" placeholder="Password of the Manager user">
                    </div>

                  </form>

                      <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>
                  </div>
                  <div class="modal-footer">
                      <button class="btn btn-primary" ng-click="ok()">OK</button>
                      <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                  </div>
              </script>

          </div>

      </div>
  </metal:main>

<metal:main fill-slot="view_scripts">
    <script src="${api.application_url}/js/domains.js"></script>
    <script src="${api.application_url}/js/hubClient.js"></script>
</metal:main>


</body>
</html>

