<!doctype html>
<html metal:use-macro="api.masterTemplate.macros['master']">
<head></head>
<body>

  <metal:main fill-slot="main">
<div ng-app="uLearnHUB">


    <h1 class="page-header">Registered Domains</h1>
    <div   ng-controller="DomainsController as ctrl">
<ng-hub-info username="${api.authenticated_user}" hubserver="${api.application_url}" oauthtoken="${api.authenticated_user_token}"></ng-hub-info>
    <table datatable="ng" dt-options="ctrl.dtOptions" dt-column-defs="ctrl.dtColumnDefs" class="compact table table-striped">
            <thead>
              <tr>
                <th>domain</th>
                <th>server</th>
                <th>oauth</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="domain in ctrl.domains">
                <td>{{ domain.name }}</td>
                <td>{{ domain.server }}</td>
                <td>{{ domain.oauth_server }}</td>

              </tr>
            </tbody>
          </table>

    </div>

</div>
  </metal:main>

</body>
</html>

